{
  "workspace": [
    "./packages/server",
    "./packages/sdk",
    "./packages/ai-sdk",
    "./packages/cli"
  ],
  "tasks": {
    "start:cli": "deno -A --env=./packages/cli/.env ./packages/cli/main.ts",
    "start:server": "deno serve -A --env=./packages/server/.env ./packages/server/main.ts",
    "test": "deno test -A",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "precommit": "deno task fmt && deno task lint && deno task test",
    "publish:dry": "deno publish --dry-run --allow-dirty"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@1.0.28",
    "zod": "npm:zod@^4.3.6",
    "@std/assert": "jsr:@std/assert@^1.0.19",
    "@std/ulid": "jsr:@std/ulid@1",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@libsql/client": "npm:@libsql/client@^0.17.0",
    "@tursodatabase/api": "npm:@tursodatabase/api@^1.9.2",
    "@tensorflow/tfjs": "npm:@tensorflow/tfjs@^4.22.0",
    "@tensorflow/tfjs-backend-wasm": "npm:@tensorflow/tfjs-backend-wasm@^4.22.0",
    "@tensorflow-models/universal-sentence-encoder": "npm:@tensorflow-models/universal-sentence-encoder@^1.3.3",
    "n3": "npm:n3@^2.0.1",
    "shacl-engine": "npm:shacl-engine@^1.1.0",
    "ai": "npm:ai@^6.0.101"
  },
  "exclude": ["./packages/console", "./packages/docs"],
  "publish": {
    "exclude": ["**/*.test.ts", "**/*_test.ts"]
  }
}
