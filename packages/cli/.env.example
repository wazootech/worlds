# REMOTE MODE #################################################################
# Use these variables to connect to a hosted Worlds API instance.

# The base URL of the Worlds API.
# (Required for remote) e.g., https://api.wazoo.dev
WORLDS_BASE_URL="https://api.wazoo.dev"

# Your Worlds API key.
# (Required for remote)
WORLDS_API_KEY=""

# LOCAL MODE ##################################################################
# Use these variables to run an in-process server locally.

# API key for administrative routes.
WORLDS_API_KEY=""

# Connection URL for LibSQL/Turso database.
# (Required for local)
LIBSQL_URL="file:./worlds.db"

# Authentication token for LibSQL/Turso database.
# Required when using a remote LibSQL/Turso database.
LIBSQL_AUTH_TOKEN=""

# Token for the Turso Management API.
TURSO_API_TOKEN=""

# Turso organization name.
TURSO_ORG=""

# API key for OpenRouter (used for chat and embeddings).
OPENROUTER_API_KEY=""

# OpenRouter model for chat (default: google/gemini-2.0-flash-001)
OPENROUTER_MODEL="google/gemini-2.0-flash-001"

# OpenRouter model for embeddings (default: openai/text-embedding-3-small)
OPENROUTER_EMBEDDINGS_MODEL="openai/text-embedding-3-small"

# Dimensionality of OpenRouter embeddings (default: 1536)
OPENROUTER_EMBEDDINGS_DIMENSIONS="1536"

# OLLAMA ######################################################################

# Base URL for Ollama.
OLLAMA_BASE_URL="http://localhost:11434"

# Ollama model for embeddings (default: nomic-embed-text)
OLLAMA_EMBEDDINGS_MODEL="nomic-embed-text"
